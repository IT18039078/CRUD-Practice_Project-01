<!DOCTYPE html>
<html lang="en">
  <!-- include the head section as EJS template-->
<%- include('./partials/head.ejs') %>
<body>
   <!-- Include the navigation bar EJS template -->
    <%- include('./partials/nav.ejs') %>

    <div class="container">
        <div class="row">
            <form class="col s12" action="/items" method="post">
              <div class="row">
                <div class="input-field col s6">
                  <i class="material-icons prefix">shop</i>
                  <input id="item_name" type="text" class="validate" name="name">
                  <label for="item_name">Item Name</label>
                </div>
                <div class="input-field col s6">
                  <i class="material-icons prefix">request_quote</i>
                  <input id="price" type="number" class="validate" name="price">
                  <label for="price" >price</label>
                </div>
              </div>
              <button class="btn"> Add item</button>
            </form>
          </div>
    </div>

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>